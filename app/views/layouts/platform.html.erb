<!DOCTYPE html>
<html>
  <head>
    <title>Layer Platform</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <% if @browser.mobile? %>
      <%= stylesheet_link_tag 'mobile_platform', media: 'all', 'data-turbolinks-track': 'reload' %>
    <% else %>
      <%= stylesheet_link_tag 'platform', media: 'all', 'data-turbolinks-track': 'reload' %>
    <% end %> 
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link href='https://fonts.googleapis.com/css?family=Russo+One' rel='stylesheet' type='text/css'>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    
  </head>

  <body>
    <% if @browser.mobile? %>
      <%= render 'shared/mobile_sidebar' %>
        <main class="render-div col main-content main-content-image">
          <div class="container">
            <%= yield %>
          </div>  
        </main>
    <% else %>
      <div class="container-fluid content">
        <div class="row">
        <%= render 'shared/sidebar' %>
          <main class="col main-content main-content-image">
            <div class="container">
              <%= yield %>
            </div>
          </main>
        </div>
      </div>
    <% end %>
  </body>

  <% if @browser.mobile? %>
    <script type="text/javascript">
      
      var layer_open_btn = document.querySelector('.layer-open-btn');
      var layer_close_btn = document.querySelector('.layer-close-btn');
      var layer_nav = document.querySelectorAll('.layer-nav');


      layer_open_btn.addEventListener('click', () => {
        layer_nav.forEach(nav_el => { nav_el.classList.add('visible') });
      });

      layer_close_btn.addEventListener('click', () => {
        layer_nav.forEach(nav_el => { nav_el.classList.remove('visible') });
      });

    </script>
  <% end %>

</html>
